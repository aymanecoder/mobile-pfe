<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/notification_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color for the notification -->
    <solid android:color="@color/notification_background_color" />

    <!-- Corner radius for rounded corners -->
    <corners android:radius="10dp" />

    <!-- Border color and width (optional) -->
    <stroke
        android:color="@color/notification_border_color"
        android:width="2dp" />
</shape>
